        <%- include("partials/navbar") %>

        <!-- Header End -->
        <div class="container-xxl py-5 bg-dark page-header mb-5">
            <div class="container my-5 pt-5 pb-4">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Aplicar a trabajo</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb text-uppercase">
                        <li class="breadcrumb-item"><a href="#">Página Principal</a></li>
                        <li class="breadcrumb-item"><a href="#">Páginas</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Aplicar a trabajo</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Header End -->
        <% if (job1) { %>
        <h2 id="title"><%= job1.title %></h2>
        <h4>Publicado el <%= job1.publish_date %></h4>
        <p><b>Descripción: </b><%= job1.description %></p>
        <p><b>Requerimientos: </b><%= job1.requirements %></p>
        <p id="location"><b>Ubicación: </b><%= job1.location %></p>
        <p id="salary"><b>Salario: </b><%= job1.salary %></p>
        <p><b>Empresa: </b><%= job1.company %></p>
        <img style="border: ridge #00B074 1px;" src="<%= job1.company_logo %>" width="100" height="100"></img>
        <p><b>Fecha límite: </b><%= job1.dead_line %></p> <br>
        <% } %>
        
                        <div class="">
                            <h4 class="mb-4">Aplica para el trabajo</h4>
                            <form id="apply-form" class="form" action="" method="post">
                                <div class="row g-3">
                                    <div class="col-12 col-sm-6">
                                        <p>Tus datos:</p><br>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <p>Nombre:<%=name%></p><br>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <p>Correo:<%=email%></p><br>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <input type="text" class="form-control" name="portfolio" placeholder="Portafolio (URL)">
                                    </div>
                                    <div class="col-12">
                                        <textarea class="form-control" rows="5" name="description" placeholder="Información adicional, preséntate con la empresa"></textarea>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn btn-primary w-100" type="submit">Aplicar ahora</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    
                    </div>
                </div>
            </div>
        

        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>


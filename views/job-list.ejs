<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Lista de Trabajos - HyperionJobs</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">
    
    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="../css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="../css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">


    <script>
        src="../js/alert"
    </script> 

</head>

<body>
    <div class="container-xxl bg-white p-0">

        <%- include("partials/navbar") %>

        <!-- Header End -->
        <div class="container-xxl py-5 bg-dark page-header mb-5">
            <div class="container my-5 pt-5 pb-4">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Lista de Trabajos</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb text-uppercase">
                        <li class="breadcrumb-item"><a href="#">Página Principal</a></li>
                        <li class="breadcrumb-item"><a href="#">Páginas</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Lista de Trabajos</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Header End -->


        <!-- Trabajo Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Listado de Trabajos</h1>
                <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
                    
                    <h1>Trabajos</h1>
                    <ul><% var i = 0 %>
                        <%jobsList.forEach(job => {%>
                            <div class="w3-container"
                            <h2 id="title"><%= job.title %></h2>
                            <h4>Publicado el <%= job.publish_date %></h4>
                            <p><b>Descripción: </b><%= job.description %></p>
                            <p><b>Requerimientos: </b><%= job.requirements %></p>
                            <p id="location"><b>Ubicación: </b><%= job.location %></p>
                            <p id="salary"><b>Salario: </b><%= job.salary %></p>
                            <p><b>Empresa: </b><%= job.company %></p>
                            <img style="border: ridge #00B074 1px;" src="<%= job.company_logo %>" width="100" height="100"></img>
                            <p><b>Fecha límite: </b><%= job.dead_line %></p>
                            <% if (job.published_by==user.id) { %>
                            <p><a href="/requests/<%= jobsList[i]._id%>" class="btn btn-primary" role="button" >Ver solicitudes</a></p>
                            <p><a href="/update-job/<%= jobsList[i]._id%>" class="btn btn-primary" role="button" >Modificar trabajo</a></p>
                            <%} else if(isStudent) { %>
                            <p><a href="/apply-job/<%= jobsList[i]._id%>" class="btn btn-primary" role="button" >Aplica ahora</a></p>
                            <%} else if(isAdmin) { %>
                                <p><a href="/update-job/<%= jobsList[i]._id%>" class="btn btn-primary" role="button" >Modificar trabajo</a></p>
                                <p><a href="/requests/<%= jobsList[i]._id%>" class="btn btn-primary" role="button" >Ver solicitudes</a></p>
                                <p><a href="/apply-job/<%= jobsList[i]._id%>" class="btn btn-primary" role="button" >Aplica ahora</a></p>
                            <%}%>
                            </div>
                            <br> <br> <!-- Salto de linea a modo de separador -->
                            <% i = i+1; %>
                        <%})%>
                    </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Jobs End -->
        <%- include("partials/footer") %>


        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/wow/wow.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
</body>

</html>